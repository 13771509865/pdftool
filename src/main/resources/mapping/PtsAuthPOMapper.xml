<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.neo.dao.PtsAuthPOMapper">
	<resultMap id="PtsAuthPOMapper" type="com.neo.model.po.PtsAuthPO">
		<id column="ID" property="id" jdbcType="INTEGER" />
		<result column="GMT_CREATE" property="gmtCreate" jdbcType="TIMESTAMP" />
		<result column="GMT_MODIFIED" property="gmtModified" jdbcType="TIMESTAMP" />
		<result column="GMT_EXPIRE" property="gmtExpire" jdbcType="TIMESTAMP" />
		<result column="STATUS" property="status" jdbcType="INTEGER" />
		<result column="USERID" property="userid" jdbcType="BIGINT" />
		<result column="AUTH_CODE" property="authCode" jdbcType="VARCHAR" />
		<result column="AUTH_VALUE" property="authValue" jdbcType="VARCHAR" />
		<result column="REMARK" property="remark" jdbcType="VARCHAR" />
		<result column="ORDER_ID" property="orderId" jdbcType="BIGINT" />
		<result column="PRIORITY" property="priority" jdbcType="INTEGER" />
	</resultMap>

	<insert id="insertPtsAuthPO" parameterType="com.neo.model.po.PtsAuthPO">
		insert into pts_auth
		<trim prefix="(" suffix=")" suffixOverrides=",">
			<if test="gmtCreate != null">
				GMT_CREATE,
			</if>
			<if test="gmtModified != null">
				GMT_MODIFIED,
			</if>
			<if test="gmtExpire != null">
				GMT_EXPIRE,
			</if>
			<if test="status != null">
				STATUS,
			</if>
			<if test="userid != null">
				USERID,
			</if>
			<if test="authCode != null and authCode != ''">
				AUTH_CODE,
			</if>
			<if test="authValue != null and authValue != ''">
				AUTH_VALUE,
			</if>
			<if test="remark != null and remark != ''">
				REMARK,
			</if>
			<if test="orderId != null and orderId != ''">
				ORDER_ID,
			</if>
			<if test="priority != null">
				PRIORITY,
			</if>
		</trim>
		<trim prefix="values (" suffix=")" suffixOverrides=",">
			<if test="gmtCreate != null">
				#{gmtCreate,jdbcType=TIMESTAMP},
			</if>
			<if test="gmtModified != null">
				#{gmtModified,jdbcType=TIMESTAMP},
			</if>
			<if test="gmtExpire != null">
				#{gmtExpire,jdbcType=TIMESTAMP},
			</if>
			<if test="status != null">
				#{status,jdbcType=INTEGER},
			</if>
			<if test="userid != null">
				#{userid,jdbcType=BIGINT},
			</if>
			<if test="authCode != null and authCode != ''">
				#{authCode,jdbcType=VARCHAR},
			</if>
			<if test="authValue != null and authValue != ''">
				#{authValue,jdbcType=VARCHAR},
			</if>
			<if test="remark != null and remark != ''">
				#{remark,jdbcType=VARCHAR},
			</if>
			<if test="orderId != null and orderId != ''">
				#{orderId,jdbcType=VARCHAR},
			</if>
			<if test="priority != null">
				#{priority,jdbcType=INTEGER},
			</if>
		</trim>
	</insert>

	<sql id="Base_Column_List">
		ID,
		GMT_CREATE,
		GMT_MODIFIED,
		GMT_EXPIRE,
		STATUS,
		USERID,
		AUTH_CODE,
		AUTH_VALUE,
		REMARK,
		ORDER_ID,
		PRIORITY
	</sql>

	<!-- 根据userid查询权限表 -->
	<select id="selectPtsAuthPO" resultMap="PtsAuthPOMapper" parameterType="com.neo.model.qo.PtsAuthQO">
		select
		<include refid="Base_Column_List" />
		from pts_auth
		<where>
			GMT_EXPIRE  &gt;  now()
	    	<if test="userid != null">
				and USERID = #{userid,jdbcType=BIGINT} 
			</if>
			<if test="status != null">
				and STATUS = #{status,jdbcType=INTEGER}
			</if>
			<if test="authCode != null and authCode != ''">
				and (
				AUTH_CODE = #{authCode,jdbcType=VARCHAR} 
				or AUTH_CODE = &quot;convertNum&quot;
				or AUTH_CODE = &quot;uploadSize&quot;
				)
			</if>
	    </where> 
	</select>

	
	<!-- 根据userid修改用户权限 -->
	<update id="updatePtsAuthPO" parameterType="com.neo.model.po.PtsAuthPO">
		update pts_auth
		<set>
			<if test="gmtCreate != null">
				GMT_CREATE = #{gmtCreate,jdbcType=TIMESTAMP},
			</if>
			<if test="gmtModified != null">
				GMT_MODIFIED = #{gmtModified,jdbcType=TIMESTAMP},
			</if>
			<if test="gmtExpire != null">
				GMT_EXPIRE = #{gmtExpire,jdbcType=TIMESTAMP},
			</if>
			<if test="status != null">
				STATUS = #{status,jdbcType=INTEGER},
			</if>
			<if test="auth != null and auth != ''">
				AUTH = #{auth,jdbcType=VARCHAR},
			</if>
			<if test="remark != null and remark != ''">
				REMARK = #{remark,jdbcType=VARCHAR},
			</if>
			<if test="orderId != null and orderId != ''">
				PRODUCT_ID = #{productId,jdbcType=VARCHAR},
			</if>
			<if test="priority != null">
				PRIORITY = #{priority,jdbcType=INTEGER},
			</if>
		</set>
		<where>
	    	<if test="userid != null">
				and USERID = #{userid,jdbcType=BIGINT} 
			</if>
			<if test="productId != null and productId != ''">
				and PRODUCT_ID = #{productId,jdbcType= VARCHAR}
			</if>
	    </where> 
	</update>


	 <!-- 删除用户会员权限信息 -->
 	 <delete id="deletePtsAuth" parameterType="java.lang.Long">
        delete from pts_auth
      	where 
      	USERID = #{userid,jdbcType=BIGINT}
   	 </delete>
	
	
	
	
	
	
	

</mapper>